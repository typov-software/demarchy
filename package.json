    "@types/autosize": "^4.0.3",
    "autosize": "^6.0.1",
    "date-fns": "^3.0.6",
    "firebase": "^10.7.1",
    "firebase-admin": "^11.11.0",
    "lodash": "^4.17.21",
    "svelte-easy-crop": "^2.0.2",
    "svelte-inview": "^4.0.2",
    "svelte-markdown": "^0.4.1",
    "url-slug": "^4.0.1"
  }
