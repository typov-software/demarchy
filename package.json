  "type": "module",
  "dependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "firebase": "^10.6.0",
    "firebase-admin": "^11.11.0",
    "lodash": "^4.17.21",
    "svelte-easy-crop": "^2.0.1",
    "url-slug": "^4.0.1"
  }
